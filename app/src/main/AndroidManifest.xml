<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wmz.wmz">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WmzActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListViewActivity"
            android:label="@string/title_activity_list_view"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="WMZ_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WheelActivity"
            android:label="@string/title_activity_wheel"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="WMZ_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.WheelPicker"
            android:label="@string/title_activity_wheel_picker"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="WMZ_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NewWidgets"
            android:label="@string/title_activity_new_widgets"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.FrescoDemo"
            android:label="@string/title_activity_fresco"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="WMZ_CODE"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
